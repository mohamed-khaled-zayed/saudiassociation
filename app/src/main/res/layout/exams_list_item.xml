<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
  <data>
    <import type="android.view.View"/>
    <import type="android.view.Gravity"/>
    <variable
        name="categoryModel"
        type="com.binarycase.saudiassociation.service.response.CategSubListResponse.CategData"/>
    <variable
        name="isExpanded"
        type="android.databinding.ObservableBoolean"/>
  </data>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_margin="@dimen/_4sdp"

    >
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/_8sdp"
      >


    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
      <View
          android:layout_width="2dp"
          android:layout_height="match_parent"
          android:layout_marginStart="@dimen/_6sdp"
          android:background="@color/colorPrimary"
          bind:setRandColor="@{true}"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_6sdp"
          android:layout_weight="1"
          android:gravity="@{isExpanded?Gravity.START:Gravity.CENTER}"
          android:text="@{isExpanded?categoryModel.categoryName:categoryModel.wordAr}"
          android:textColor="@color/black"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_6sdp"
          android:text="@{categoryModel.wordEn}"
          android:layout_weight="1"
          android:gravity="center"
          android:visibility="@{isExpanded?View.GONE:View.VISIBLE}"
          android:textColor="@color/black"
          />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@{isExpanded?@drawable/up_arrow:@drawable/down_arrow}"
        app:layout_constraintBottom_toBottomOf="@+id/headerContainer"
        app:layout_constraintTop_toTopOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/favourite_bg"
        android:padding="@dimen/_6sdp"
        android:src="@{categoryModel.isFavourite?@drawable/fav_selected:@drawable/fav_unselected}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/barrier2"
        android:visibility="@{categoryModel.isFavLoading()?View.INVISIBLE:View.VISIBLE}"
        />
    <ProgressBar
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        android:visibility="@{categoryModel.isFavLoading()?View.VISIBLE:View.GONE}"/>
    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="headerContainer"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/gray_with_radius_bg"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barrier2"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/_2sdp"
          android:layout_marginStart="@dimen/_2sdp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@{categoryModel.wordEn}"
          android:textColor="@color/black"
          />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/_2sdp"
          android:layout_marginStart="@dimen/_2sdp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@{categoryModel.wordAr}"
          android:textColor="@color/black"
          />

    </LinearLayout>
    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/JZVideoPlayerStandard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_8sdp"
        bind:videoUrl="@{categoryModel.videoFile}"
        app:layout_constraintTop_toBottomOf="@+id/barrier3"
        />
    <android.support.constraint.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="JZVideoPlayerStandard,imageButton2"
        />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/share_button_bg"
        android:gravity="center"
        bind:shareText="@{categoryModel.shareUrl}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JZVideoPlayerStandard"
        app:layout_constraintWidth_percent=".7"
        >
      <ImageView
          android:id="@+id/imageView"
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:layout_margin="@dimen/_6sdp"
          android:src="@drawable/share"
          />
    </LinearLayout>
    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{isExpanded?View.VISIBLE:View.GONE}"
        app:constraint_referenced_ids="linearLayout2,linearLayout,JZVideoPlayerStandard,barrier3"
        />
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</layout>